  </row>
  <row valign="top">
  <entry align="left"><m:math><m:mrow><m:mi>a</m:mi><m:mo>−</m:mo><m:mn>0.01</m:mn></m:mrow></m:math></entry>
  <entry align="left"><m:math><m:mrow><m:mi>f</m:mi><m:mrow><m:mo>(</m:mo><m:mrow><m:mi>a</m:mi><m:mo>−</m:mo><m:mn>0.01</m:mn></m:mrow><m:mo>)</m:mo></m:mrow></m:mrow></m:math></entry>
  <entry align="left"><m:math><m:mrow><m:mi>a</m:mi><m:mo>+</m:mo><m:mn>0.01</m:mn></m:mrow></m:math></entry>
  <entry align="left"><m:math><m:mrow><m:mi>f</m:mi><m:mrow><m:mo>(</m:mo><m:mrow><m:mi>a</m:mi><m:mo>+</m:mo><m:mn>0.01</m:mn></m:mrow><m:mo>)</m:mo></m:mrow></m:mrow></m:math></entry>
  </row>
  <row valign="top">
  <entry align="left"><m:math><m:mrow><m:mi>a</m:mi><m:mo>−</m:mo><m:mn>0.001</m:mn></m:mrow></m:math></entry>
  <entry align="left"><m:math><m:mrow><m:mi>f</m:mi><m:mrow><m:mo>(</m:mo><m:mrow><m:mi>a</m:mi><m:mo>−</m:mo><m:mn>0.001</m:mn></m:mrow><m:mo>)</m:mo></m:mrow></m:mrow></m:math></entry>
