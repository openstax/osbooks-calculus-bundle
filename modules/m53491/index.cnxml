<entry align="left">−0.0001</entry>
<entry align="left">0.305614388888</entry>
<entry align="left">0.0001</entry>
<entry align="left">−0.305614388888</entry>
</row>
<row valign="top">
<entry align="left">−0.00001</entry>
<entry align="left">−0.035748797987</entry>
