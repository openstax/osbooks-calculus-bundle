<exercise id="fs-id1170572552593">
<problem id="fs-id1170572552595">
<para id="fs-id1170572552597"><m:math><m:mrow><m:munder><m:mrow><m:mtext>lim</m:mtext></m:mrow><m:mrow><m:mi>x</m:mi><m:mo stretchy="false">→</m:mo><m:mn>1</m:mn></m:mrow></m:munder><m:mroot><m:mrow><m:mrow><m:mi>f</m:mi><m:mrow><m:mo>(</m:mo><m:mi>x</m:mi><m:mo>)</m:mo></m:mrow><m:mo>−</m:mo><m:mi>g</m:mi><m:mrow><m:mo>(</m:mo><m:mi>x</m:mi><m:mo>)</m:mo></m:mrow></m:mrow></m:mrow><m:mrow><m:mn>3</m:mn></m:mrow></m:mroot></m:mrow></m:math></para>
</problem>
<solution id="fs-id1170572552640">
<para id="fs-id1170572552642"><m:math><m:mrow><m:munder><m:mrow><m:mtext>lim</m:mtext></m:mrow><m:mrow><m:mi>x</m:mi><m:mo stretchy="false">→</m:mo><m:mn>1</m:mn></m:mrow></m:munder><m:mroot><m:mrow><m:mi>f</m:mi><m:mrow><m:mo>(</m:mo><m:mi>x</m:mi><m:mo>)</m:mo></m:mrow><m:mo>−</m:mo><m:mi>g</m:mi><m:mrow><m:mo>(</m:mo><m:mi>x</m:mi><m:mo>)</m:mo></m:mrow></m:mrow><m:mn>3</m:mn></m:mroot><m:mo>=</m:mo><m:mroot><m:mrow><m:munder><m:mrow><m:mtext>lim</m:mtext></m:mrow><m:mrow><m:mi>x</m:mi><m:mo stretchy="false">→</m:mo><m:mn>1</m:mn></m:mrow></m:munder><m:mi>f</m:mi><m:mrow><m:mo>(</m:mo><m:mi>x</m:mi><m:mo>)</m:mo></m:mrow><m:mo>−</m:mo><m:munder><m:mrow><m:mtext>lim</m:mtext></m:mrow><m:mrow><m:mi>x</m:mi><m:mo stretchy="false">→</m:mo><m:mn>1</m:mn></m:mrow></m:munder><m:mi>g</m:mi><m:mrow><m:mo>(</m:mo><m:mi>x</m:mi><m:mo>)</m:mo></m:mrow></m:mrow><m:mn>3</m:mn></m:mroot><m:mo>=</m:mo><m:mroot><m:mrow><m:mn>2</m:mn><m:mo>+</m:mo><m:mn>5</m:mn></m:mrow><m:mn>3</m:mn></m:mroot><m:mo>=</m:mo><m:mroot><m:mn>7</m:mn><m:mn>3</m:mn></m:mroot></m:mrow></m:math></para>
</solution>
</exercise>
<exercise id="fs-id1170572128651">
