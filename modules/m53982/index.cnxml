    <entry><emphasis effect="bold">Green’s theorem, extended version</emphasis></entry>
    <entry><m:math><m:mrow><m:mstyle displaystyle="true"><m:mrow><m:msub><m:mo>∫</m:mo><m:mrow><m:mo>∂</m:mo><m:mi>D</m:mi></m:mrow></m:msub><m:mrow><m:mstyle mathvariant="bold" mathsize="normal"><m:mtext>F</m:mtext></m:mstyle><m:mo>·</m:mo><m:mi>d</m:mi><m:mstyle mathvariant="bold" mathsize="normal"><m:mtext>r</m:mtext></m:mstyle></m:mrow></m:mrow></m:mstyle><m:mo>=</m:mo><m:mstyle displaystyle="true"><m:mrow><m:msub><m:mo>∬</m:mo><m:mi>D</m:mi></m:msub><m:mrow><m:msub><m:mi>Q</m:mi><m:mi>x</m:mi></m:msub><m:mo>−</m:mo><m:msub><m:mi>P</m:mi><m:mi>y</m:mi></m:msub><m:mi>d</m:mi><m:mi>A</m:mi></m:mrow></m:mrow></m:mstyle></m:mrow></m:math></entry>
