    <entry><emphasis effect="bold">Green’s theorem, flux form</emphasis></entry>
    <entry><m:math><m:msub><m:mo>&#x222B;</m:mo><m:mi>C</m:mi></m:msub><m:mtext mathvariant="bold">F</m:mtext><m:mo>&#xB7;</m:mo><m:mtext mathvariant="bold">N</m:mtext><m:mi>d</m:mi><m:mi>s</m:mi><m:mo>=</m:mo><m:msub><m:mo>&#x222C;</m:mo><m:mi>D</m:mi></m:msub><m:msub><m:mi>P</m:mi><m:mi>x</m:mi></m:msub><m:mo>+</m:mo><m:msub><m:mi>Q</m:mi><m:mi>y</m:mi></m:msub><m:mi>d</m:mi><m:mi>A</m:mi></m:math></entry>
  </row>
